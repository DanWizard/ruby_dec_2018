<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<div class="container">
	<div class="row">
        <div class="col-sm-12">
            <legend>Dojo DashBoard</legend>
        </div>
        <div class="col-sm-5">
            <h4>Student Data</h4>
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
            <div class="panel panel-default">
                <div class="panel-body form-horizontal payment-form">
                    <div class="form-group">
                        <label for="concept" class="col-sm-3 control-label">First Name:</label>
                        <div class="col-sm-9">
                            <p><%=@student.first_name%></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-sm-3 control-label">Last Name:</label>
                        <div class="col-sm-9">
                            <p><%=@student.last_name%></p>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label for="amount" class="col-sm-3 control-label">Email</label>
                        <div class="col-sm-9">
                            <p><%=@student.email%></p>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
	</div>
</div>
<div class="container">
    <div class="row">
        <a href="/dojos/show/<%=@student.dojo_id%>">Back</a>
        |
        <a href="/dojos/edit/student/<%=@student.id%>">Edit</a>
    </div>
</div>