<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<!------ Include the above in your HEAD tag ---------->

<div class="container">
	<div class="row">
        <div class="col-sm-12">
            <legend>Dojo DashBoard</legend>
        </div>
        <div class="col-sm-5">
            <h4>New Dojo</h4>
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
            <div class="panel panel-default">
                <div class="panel-body form-horizontal payment-form">
                    <div class="form-group">
                        <label for="concept" class="col-sm-3 control-label">Street</label>
                        <div class="col-sm-9">
                            <p><%=@dojo.street%></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-sm-3 control-label">State</label>
                        <div class="col-sm-9">
                            <p><%=@dojo.state%></p>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label for="amount" class="col-sm-3 control-label">City</label>
                        <div class="col-sm-9">
                            <p><%=@dojo.city%></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="status" class="col-sm-3 control-label">Branch</label>
                        <div class="col-sm-9">
                            <p><%=@dojo.branch%></p>
                        </div>
                    </div> 
                </div>
            </div> 
        </div>
	</div>
</div>
<form action="/dojos/new" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
    <input type="submit" name="">
</form>